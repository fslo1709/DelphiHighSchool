unit fibonacci;//Sebastián López, C4A
interface
uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, StdCtrls;
type
  TForm1 = class(TForm)
    Edit1: TEdit;
    Button1: TButton;
    procedure Button1Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;
var
  Form1: TForm1;
implementation
{$R *.dfm}
procedure f_fibonacci(lim: integer);
var
  i,a,b,c: integer;
  m: array[1..100] of integer;
begin
  a:= 0;
  b:= 1;
  m[1]:= a;
  m[2]:= b;
  for i := 3 to lim do
    begin
      m[i]:= a+b;
      c:= a;
      a:= b;
      b:= c;
    end;
end;
procedure TForm1.Button1Click(Sender: TObject);
begin
  f_fibonacci (strtoint(edit1.Text));
end;
end.
