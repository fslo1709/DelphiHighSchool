unit num_perfecto;//Sebastián López, C4A
interface
uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, StdCtrls;
type
  TForm1 = class(TForm)
    Edit1: TEdit;
    Button1: TButton;
    procedure Button1Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;
var
  Form1: TForm1;
implementation
{$R *.dfm}
procedure TForm1.Button1Click(Sender: TObject);
var
  a: boolean;
  b,c,d: integer;
begin
  b:= strtoint(edit1.Text);
  c:= 1;
  d:= 0;
  while c<b do
    begin
      if b mod c=0 then
        d:= d+c;
      inc (c);
    end;
  if d=b then
    showmessage('Es número perfecto')
  else
    showmessage('No es número perfecto');
end;
end.
