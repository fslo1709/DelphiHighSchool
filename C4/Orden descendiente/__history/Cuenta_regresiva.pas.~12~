unit Cuenta_regresiva; //Sebastián López, C4A
interface
uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, StdCtrls;
type
  TForm1 = class(TForm)
    Edit1: TEdit;
    Edit2: TEdit;
    Button1: TButton;
    ListBox1: TListBox;
    procedure Button1Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;
var
  Form1: TForm1;
  a: integer;
implementation
{$R *.dfm}
procedure TForm1.Button1Click(Sender: TObject);
begin
  a:= strtoint (edit1.text);
  edit2.Text:= '';
  listbox1.Show;
  listbox1.Items.Create;
  if a>1 then
    while a>1 do
      begin
        a:= a-1;
        if a<>1 then
          edit2.Text:= edit2.Text+inttostr(a)+', '
        else
          edit2.Text:= edit2.Text+inttostr(a);
      end
  else
    showmessage('Ingrese un número mayor a 1');
end;
end.
