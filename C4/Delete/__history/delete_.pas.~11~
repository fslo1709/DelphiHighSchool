{$R *.dfm}
procedure TForm1.Button1Click(Sender: TObject);
var
  a: string;
  b,c,i: integer;
begin
  a:= '';
  b:= strtoint(edit2.Text);
  c:= strtoint(edit3.Text);
  for i := 1 to length(edit1.Text) do
    if (i>=b) and (i<b+c) then
    else
      a:= a+edit1.Text[i];
  //a:= edit1.Text;
  label5.Caption:= a;
end;
end.
