      if op='c' then
        begin
          Writeln ('Ingrese cinco números');
        end
      else
        if op='d' then
          begin

          end
        else
          if op='e' then
            begin

            end
          else
            Writeln ('Lo siento, ',op,' no es un valor válido');
  Readln
end.
